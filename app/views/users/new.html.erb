<h1>Criar Usuário</h1>

<ul>
  <% if @user %>
      <% @user.errors.messages.each do |attrib, msg| %>
          <li><%="O campo #{t attrib} #{msg.to_sentence}"%></li>
      <% end %>
  <% end %>
</ul>

<%= form_for @user do |f| %>

    <%= f.label :login, "Login:" %>
    <%= f.text_field :login %><br/>

    <%= f.label :passwordSHA1, "Senha:" %>
    <%= f.password_field :passwordSHA1 %><br/>

    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email %><br/>

    <%= f.label :company_name, "Nome da Empresa:" %>
    <%= f.text_field :company_name %><br/>

    <%= f.label :cnpj, "CNPJ:" %>
    <%= f.text_field :cnpj %><br/>

    <%= f.label :telephone1, "Telefone 1:" %>
    <%= f.text_field :telephone1 %><br/>

    <%= f.label :telephone2, "Telefone 2:" %>
    <%= f.text_field :telephone2 %><br/>

    <%= f.label :telephone3, "Telefone 3:" %>
    <%= f.text_field :telephone3 %><br/>

    <%= f.label :street_address, "Endereço:" %>
    <%= f.text_field :street_address %><br/>

    <%= f.label :number_address, "Número:" %>
    <%= f.text_field :number_address %><br/>

    <%= f.label :complement, "Complemento:" %>
    <%= f.text_field :complement %><br/>

    <% states_array = @states.map { |state| [state.name, state.acronym] } %>
    <%= f.label :state_id, "Estado:" %>
    <%= f.select :state_id, options_for_select(states_array, @state_acronym) , {:prompt => 'Selecione'}, { :id => 'user_state'} %><br/>

    <% cities_array = @cities.map { |city| [city.name, city.name] } %>
    <%= f.label :city, "Cidade:" %>
    <%= f.select :city_id, options_for_select(cities_array,  @city_name) , {:prompt => 'Selecione'}, { :id => 'user_city', :disabled => @user.city.nil?} %><br/>

    <% districts_array = @districts.map { |district| [district.name, district.name] } %>
    <%= f.label :district, "Bairro:" %>
    <%= f.select :district_id, options_for_select(districts_array,  @district_name) ,{:prompt => 'Selecione'}, { :id => 'user_district', :disabled => @user.district.nil?} %><br/>

    <%= f.label :zip_code, "CEP:" %>
    <%= f.text_field :zip_code %><br/>

    <%= f.submit "Criar" %>
<% end %>

<%= link_to 'Voltar', root_path %>