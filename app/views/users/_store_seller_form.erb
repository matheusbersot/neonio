<%= form_for @user  do |f| %>

    <%= f.label :name, "Login:" %>
    <%= f.text_field :name %><br/>

    <%= f.label :password, "Senha:" %>
    <%= f.password_field :password %><br/>

    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email %><br/>

    <%= recaptcha_tags %>

    <%= hidden_field_tag :form_type, @form_type %><br/>

    <%= f.submit "Criar" %>

<% end %>


