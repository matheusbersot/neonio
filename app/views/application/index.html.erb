<h1>Faça seu login</h1>

<%= form_tag login_path do %>
    <p>
      <%= label_tag "Nome do usuário" %><br />
      <%= text_field_tag :username, params[:user_name] %>
    </p>
    <p>
      <%= label_tag :senha %><br />
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Entrar" %></p>
<% end %>